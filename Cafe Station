            <div class="mb-4">
                <label class="block text-gray-700">Quantity</label>
                <input type="number" id="quantity" class="block w-full mt-2 border border-gray-300 rounded py-2 px-3">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Unit</label>
                <select id="unit" class="block w-full mt-2 border border-gray-300 rounded py-2 px-3">
                    <option>ML</option>
                    <option>GM</option>
                    <option>EACH</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Price</label>
                <input type="number" id="price" class="block w-full mt-2 border border-gray-300 rounded py-2 px-3">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700">Reason</label>
                <input type="text" id="reason" class="block w-full mt-2 border border-gray-300 rounded py-2 px-3">
            </div>
            <div class="flex justify-between items-center">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="button" onclick="addItem()">Add Item</button>
                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" type="button" onclick="logout()">Logout</button>
            </div>
            <div class="mt-8">
                <h2 class="text-xl font-bold">Invoice</h2>
                <div id="invoice" class="mt-4 bg-gray-100 p-4 rounded shadow-inner"></div>
                <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-4" type="button" onclick="printInvoice()">Print Invoice</button>
            </div>
        </div>
    </div>
    <script>
        const items = [];

        function addItem() {
            const branch = document.getElementById('branch').value;
            const category = document.getElementById('category').value;
            const product = document.getElementById('product').value;
            const quantity = document.getElementById('quantity').value;
            const unit = document.getElementById('unit').value;
            const price = document.getElementById('price').value;
            const reason = document.getElementById('reason').value;

            const item = {
                branch,
                category,
                product,
                quantity,
                unit,
                price,
                reason
            };

            items.push(item);
            updateInvoice();
        }

        function updateInvoice() {
            const invoice = document.getElementById('invoice');
            invoice.innerHTML = '';

            items.forEach((item, index) => {
                const itemDiv = document.createElement('div');
                itemDiv.className = 'p-2 border-b border-gray-300';
                itemDiv.innerHTML = `
                    <p><strong>${item.product}</strong> (${item.category})</p>
                    <p>Quantity: ${item.quantity} ${item.unit}</p>
                    <p>Price: ${item.price}</p>
                    <p>Reason: ${item.reason}</p>
                `;
                invoice.appendChild(itemDiv);
            });
        }

        function printInvoice() {
            const printContents = document.getElementById('invoice').innerHTML;
            const originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }

        function logout() {
            window.location.href = 'login.html';
        }
    </script>
</body>
